{# role 'interfaces' in Playbook einbauen, um diesen Teil der config zu generieren 
#}
{# macro zum mergen der vlans #}
{% import 'helpers/macros.j2' as macros with context %}
{% set vlans_merged = ({}) %}
{{ macros.merge_vlans(group.vlan_areas, vlans_merged) }}
{# macro fuer interface unit config, verwendet in interfaces und interface ranges #}
{% macro int_unit(int) %}
    {% if (int.mode is defined or int.vlan is defined or int.vlans is defined) %}
        unit 0 {
            family ethernet-switching {
            {% if int.mode is defined %}
                port-mode {{ int.mode }};
            {% endif %}
            {% if int.vlan is defined %}
                vlan {
                    members {% if int.vlan == 'all' %}all{% else %}{{ vlans_merged[int.vlan] }}{% endif %};
                }
            {% elif int.vlans is defined %}
                vlan {
                    members [ {% for vln in int.vlans %}{{ vlans_merged[vln] }} {% endfor %}];
                }
            {% endif %}
            {% if int.native is defined %}
                native-vlan-id {{ int.native }};
            {% endif %}
            }
        }
    {%- endif %}
{% endmacro %}
{# beginn der junos interface config #}
interfaces {
{% for _ifrange_ in if_ranges|sort %}
    {% set ifrange = if_ranges[_ifrange_] %}
    interface-range {{ _ifrange_ }} {
    {% if ifrange.member_ranges is defined %}
        {% for rng in ifrange.member_ranges %}
        member-range {{ rng }};
        {% endfor %}
    {% endif %}
    {% if ifrange.member_range is defined %}
        member-range {{ ifrange.member_range }};
    {% endif %}
    {% if ifrange.members is defined %}
        {% for intf in ifrange.members %}
        member {{ intf }};
        {% endfor %}
    {% endif %}
    {% if ifrange.member is defined %}
        member {{ ifrange.member }};
    {% endif %}
    {{ int_unit(ifrange) }}
    }
{% endfor %}
{% for _iface in interfaces %}
    {% set iface = interfaces[_iface] %}
    {{ _iface }} {
    {% if iface.desc is defined %}
        description "{{ iface.desc }}";
    {% endif %}
    {% if iface.mtu is defined %}
        mtu {{ iface.mtu }};
    {% endif %}
    {% if iface.etheroptions is defined %}
        ether-options {
        {% if iface.etheroptions.no_auto == true %}
            no-auto-negotiation;
        {% endif %}
        {% if iface.etheroptions.half_duplex == true %}
            link-mode full-duplex;
        {% endif %}
        {% if iface.etheroptions.speed is defined %}
            speed {
                {{ iface.etheroptions.speed }};
            }
        {% endif %}
        }
    {% endif %}
    {{ int_unit(iface) }}
    }
{% endfor %}
    me0 {
        unit 0 {
            description "{{ inventory_hostname }} local OOB Mgmt";
            family inet {
                address 169.254.1.1/16;
            }
            family inet6;
        }
    }
    vlan {
        unit {{ mgmt_shared.vlan }} {
            description "{{ inventory_hostname }} Mgmt";
            family inet {
                address {{ mgmt_host.v4_addr }}/24;
            }
            family inet6 {
                address {{ mgmt_host.v6_addr }}/64;
            }
        }
    }
}