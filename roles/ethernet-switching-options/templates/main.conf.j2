{# role 'ethernet-switching-options' in Playbook einbauen, um diesen Teil der config zu generieren 
#}
ethernet-switching-options {
    storm-control {
        interface all;
    }
{% for _iface in interfaces %}
    {% set iface = interfaces[_iface] %}
    {% if (iface.mstp is defined and iface.mstp == 'disable') %}
    bpdu-block {
        interface {{ _iface }}.0 {
            drop;
        }
    }
    {% endif %}
{% endfor %}
}