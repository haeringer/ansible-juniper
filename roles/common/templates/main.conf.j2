{# This config is common to all Junos device types. For it to be generated the 'common' role must be included in the platform specific play file. #}
system {
    host-name {{ inventory_hostname }};
    time-zone {{ time_zone }};
    no-redirects;
    authentication-order [ tacplus password ];
    root-authentication {
        encrypted-password "{{ root_password }}"; ## SECRET-DATA
    }
    name-server {
{% for name_server in name_servers %}
        {{ name_server }};
{% endfor %}
    }
    tacplus-server {
{% for tacacs_server in tacacs_servers %}
        {{ tacacs_server.ip }} { 
            port 49;
            secret "{{ tacacs_server.secret }}";
            timeout 10;
            single-connection;
            source-address {{ host.mgmt.ipv4_addr }}
        }
{% endfor %}
    }
    services {
        ssh {
            root-login deny;
            protocol-version v2;
            rate-limit 10;
        }
        netconf {
            ssh;
        }
    }
    login {
        class rancid {
            permissions [ access admin firewall flow-tap interface network routing secret security snmp system trace view ];
        }
        user exampleorg {
            uid 2000;
            class super-user;
            authentication {
                encrypted-password "$1$Cfleyry8$.344Wb06pWKZpjIbfH53P1"; ## SECRET-DATA
            }
        }
        user rancid {
            uid 2001;
            class rancid;
            authentication {
                ssh-rsa "ssh-rsa "; ## SECRET-DATA
            }
        }
        user remote {
            uid 2002;
            class read-only;
        }
        user sdavid {
            full-name "Steffen David";
            uid 2004;
            class super-user;
            authentication {
                encrypted-password "$1$w5Aho4H3$zEVvMRiCwiQKqzr3A.VGL1"; ## SECRET-DATA
            }
        }
    }
    syslog {
        user * {
            any emergency;
        }
        file messages {
            any notice;
            authorization info;
        }
        file interactive-commands {
            interactive-commands any;
        }
    }
    ntp {
{% for ntp_server in ntp_servers %}
        server {{ ntp_server }};
{% endfor %}
    }
}
{% block interfaces %}{% endblock %}
snmp {
    description "{{ inventory_hostname }}";
    location {{ host.snmp.location }};
    contact "{{ snmp_contact }}";
    community {{ snmp_community }} {
        authorization read-only;
    }
    trap-group default {
        categories {
            authentication;
            chassis;
            link;
            remote-operations;
            routing;
            startup;
            rmon-alarm;
            vrrp-events;
            configuration;
        }
        targets {
{% for snmp_server in snmp_servers %}
            {{ snmp_server }};
{% endfor %}
        }
    }
}
{% block routing_options %}{% endblock %}
{% block protocols %}{% endblock %}
{% block policy_options %}{% endblock %}
{% block etc %}{% endblock %}
